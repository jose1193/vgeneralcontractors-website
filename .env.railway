# Railway Environment Variables Configuration
# Copy these variables to your Railway project settings

# Laravel Configuration
APP_NAME="V General Contractors"
APP_ENV=production
APP_KEY= # Generate with: php artisan key:generate --show
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=${RAILWAY_PUBLIC_DOMAIN}
APP_LOCALE=en
APP_FALLBACK_LOCALE=en

# Database Configuration (PostgreSQL from Railway/Supabase)
DB_CONNECTION=pgsql
DB_HOST=${PGHOST}
DB_PORT=${PGPORT}
DB_DATABASE=${PGDATABASE}
DB_USERNAME=${PGUSER}
DB_PASSWORD=${PGPASSWORD}

# Redis Configuration (from Railway Redis service)
REDIS_HOST=${REDIS_PRIVATE_URL} # or ${REDIS_HOST}
REDIS_PORT=${REDIS_PORT}
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DB=0

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Cache Configuration
CACHE_DRIVER=redis
CACHE_PREFIX=vgcontractors

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_FAILED_DRIVER=database-uuids

# Broadcasting
BROADCAST_CONNECTION=log

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST= # Your mail host
MAIL_PORT=587
MAIL_USERNAME= # Your mail username
MAIL_PASSWORD= # Your mail password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=info@vgeneralcontractors.com
MAIL_FROM_NAME="V General Contractors"

# Logging
LOG_CHANNEL=stack
LOG_STACK=single,slack
LOG_LEVEL=error

# File Storage
FILESYSTEM_DISK=local

# Additional Laravel Settings
BCRYPT_ROUNDS=12
HASH_VERIFY=true

# TinyMCE API Key
TINYMCE_API_KEY= # Your TinyMCE API key

# Captcha Configuration  
CAPTCHA_SITEKEY= # Your captcha site key
CAPTCHA_SECRET= # Your captcha secret

# Social Media Links
FACEBOOK_LINK=https://www.facebook.com/vgeneralcontractors/
INSTAGRAM_LINK=https://www.instagram.com/vgeneralcontractors/
LINKEDIN_LINK=https://www.linkedin.com/company/v-general-contractors/
TWITTER_LINK=https://twitter.com/vgeneralcontractors

# Company Information
COMPANY_NAME="V General Contractors"
COMPANY_PHONE=+17135876423
COMPANY_EMAIL=info@vgeneralcontractors.com
COMPANY_ADDRESS="1302 Waugh Dr # 810 Houston TX 77019"

# Retell AI Configuration (if applicable)
RETELL_AI_API_KEY= # Your Retell AI API key
RETELL_AI_AGENT_ID= # Your Retell AI Agent ID

# Railway Specific
RAILWAY_STATIC_URL=${RAILWAY_STATIC_URL}
RAILWAY_PUBLIC_DOMAIN=${RAILWAY_PUBLIC_DOMAIN}
